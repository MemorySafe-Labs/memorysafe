import os, sys, platform

print("Python:", sys.version)
print("Platform:", platform.platform())
print("CWD:", os.getcwd())

def find_repo_root(start="."):
    import os
    start = os.path.abspath(start)
    for root, dirs, files in os.walk(start):
        if "benchmarks" in dirs and "src" in dirs:
            return root
    return None

repo = find_repo_root(".")
if repo:
    os.chdir(repo)
    print("Repo root found:", repo)
else:
    print("Repo root not found, assuming local run.")

print("Now at:", os.getcwd())

import subprocess, sys, os

demo_dir = os.path.join(os.getcwd(), "benchmarks", "Taste_demo_v2")
print("Demo dir:", demo_dir)
assert os.path.exists(demo_dir), "Taste_demo_v2 folder not found."

cmd = [sys.executable, "simulate_stream.py"]
print("Running:", " ".join(cmd))

p = subprocess.run(cmd, cwd=demo_dir, capture_output=True, text=True)
print(p.stdout)

if p.returncode != 0:
    print("ERROR:")
    print(p.stderr)
    raise RuntimeError("simulate_stream.py failed")

